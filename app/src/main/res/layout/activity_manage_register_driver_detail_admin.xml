<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employee.Admin.Activities.ManageRegisterDriverDetailActivityAdmin">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Manage Register Driver"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageRegister"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/usericon"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:id="@+id/editSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_below="@id/imageRegister" >
                <EditText
                    android:id="@+id/editText_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_design"
                    android:hint="User's fullname"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"/>

                <EditText
                    android:id="@+id/editText_phoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_design"
                    android:hint="User's phone number"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"/>
                <EditText
                    android:id="@+id/editText_mail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_design"
                    android:hint="User's mail"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"/>

                <EditText
                    android:id="@+id/editText_ID"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_design"
                    android:hint="User's ID"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"/>

                <EditText
                    android:id="@+id/editText_license"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_design"
                    android:hint="User's license"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"/>

                <EditText
                    android:id="@+id/editText_bankname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_design"
                    android:hint="User's bank name"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"/>

                <EditText
                    android:id="@+id/editText_bankNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_design"
                    android:hint="User's bank number"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/accept_btn"
                        android:layout_width="120dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="60dp"
                        android:backgroundTint="@color/background_slogan"
                        android:text="Accept"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/deny_btn"
                        android:layout_width="120dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:backgroundTint="@color/background_snack_bar"
                        android:text="Deny"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>